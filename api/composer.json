{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1.0",
        "ext-json": "^1.5",
        "ext-mbstring": "^7.1",
        "doctrine/orm": "^2.7",
        "php-di/php-di": "^6.0",
        "php-di/slim-bridge": "^3.0",
        "ramsey/uuid": "^3.9",
        "slim/psr7": "^0.6.0",
        "slim/slim": "^4.3",
        "symfony/console": "^4.4",
        "symfony/dotenv": "^4.4",
        "zendframework/zend-config-aggregator": "^1.2",
        "zendframework/zend-diactoros": "^2.2",
        "zendframework/zend-stdlib": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
       "psr-4": {
           "Api\\": "src"
       }
    },
  "autoload-dev": {
    "psr-4": {
      "Api\\Test\\": "tests/"
    }
  },
  "scripts": {
    "app": "php bin/app.php --ansi",
    "test": "phpunit --colors=always tests/"
  }
}
